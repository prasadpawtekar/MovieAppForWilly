<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RatingView">
        <attr name="rv_progress" format="integer" />
        <attr name="rv_angle" format="float" />
        <attr name="rv_start_angle" format="float" />
        <attr name="rv_stroke_width" format="dimension" />
        <attr name="rv_finished_stroke_width" format="dimension" />
        <attr name="rv_max" format="integer" />
        <attr name="rv_unfinished_color" format="color" />
        <attr name="rv_finished_color" format="color" />

        <attr name="rv_show_progress_text" format="boolean" />
        <attr name="rv_text_size" format="dimension" />
        <attr name="rv_text_color" format="color" />

        <attr name="rv_suffix_text" format="string" />
        <attr name="rv_suffix_text_size" format="dimension" />
        <attr name="rv_suffix_text_padding" format="dimension" />

        <attr name="rv_bottom_text" format="string" />
        <attr name="rv_bottom_text_size" format="dimension" />

        <attr name="rv_bg_color" format="color" />
        <attr name="rv_circular_padding" format="dimension" />
        <attr name="rv_finished_color_ranges" format="reference" />
        <attr name="rv_unfinished_color_ranges" format="reference" />
        <attr name="rv_progress_ranges" format="reference" />

    </declare-styleable>

    <attr name="tagViewStyle" format="reference" />
    <declare-styleable name="TagView">
        <attr name="tagCornerRadius" format="dimension" />
        <attr name="tagPadding" format="dimension" />
        <attr name="tagUppercase" format="boolean" />
    </declare-styleable>

</resources>